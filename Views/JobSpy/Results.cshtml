
@{
    ViewBag.Title = "UrlString";
}



<div class="row">
    <div class="col-lg-10">
        <h2>Select the words on the left under the Keywords, Skills & Concepts that pertain to from the job description and then add them to the list of words on the right that you will save to include in your resume</h2>
    </div>
    <div class="col-lg-2">
    <h3>Show me how these are used in the job!</h3>
    </div>
        <div class="col-lg-12">
            <div class="col-lg-6">
                <div class="row">
                    <h3>Keywords</h3>

                    @if (ViewBag.Keywords.Count == 0)
                    {
                        <span>No Keywords Found</span>
                    }
                    else
                    {
                        foreach (var item in ViewBag.Keywords)
                        {


                            <span class="label label-primary">@item</span>

                        }
                    }

                </div>
                <div class="row">
                    <h3>Job Skills</h3>

                    @if (ViewBag.Entities.Count == 0)
                    {
                        <span>No Job Skills Found</span>
                    }
                    else
                    {
                        foreach (var item in ViewBag.Entities)
                        {

                            <span class="label label-warning">@item</span>
                        }
                    }
                </div>
                <div class="row">
                    <h3>Job Core Concepts</h3>

                    @if (ViewBag.Concepts.Count == 0)
                    {
                        <span>No Job Concepts Found</span>
                    }
                    else
                    {
                        foreach (var item in ViewBag.Concepts)
                        {

                            <span class="label label-success">@item</span>
                        }
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="well">
                    <h2>Your Resume List</h2>


                </div>
            </div>




        </div>
    </div>



